@using SeyahatSitesi.Models.Sınıflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
      @foreach (var x in Model)
      {

    <tr>
        <td>@x.ID</td>
        <td>@x.KullaniciAdi</td>
        <td>@x.Mail</td>
        <td>@x.Yorum</td>
        <td><a href="/Blog/Index/@x.Blog.Baslik">@x.Blog.Baslik</a> </td>
        <td> <a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
        <td> <a href="#" class="btn btn-" >Güncelle</a></td>
    </tr>
      }
</table>
